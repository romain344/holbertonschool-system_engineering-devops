flowchart TD
    Client["Client/User"] --> FW1["Firewall 1"]
    FW1 --> LB["HAProxy Load Balancer (SSL Certificate - HTTPS)"]
    LB --> S1["Server 1: Nginx + App + Code + MySQL Primary + Monitoring"] & S3["Server 3: Nginx + App + Code + MySQL Replica + Monitoring"] & S2["Server 2: Nginx + App + Code + MySQL Replica + Monitoring"]
    S1 --> n1["firewall 3"] & n3["monitoroing service"]
    S3 --> n1 & n3
    S2 --> n1 & n3
    n1 --> n2["Mysql primary"]
    n2 --> n4["firewall 3"]
    n4 --> n5["Mysql replica"]